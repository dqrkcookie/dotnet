<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pawfect_Care.Profile"
             Title=""
             BackgroundImageSource="gb.png">

    <StackLayout Padding="10">
        <Label 
            Text="My Pets" 
            FontSize="36" 
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Margin="0,30,0,10"
            TextColor="#5B3A29"/>

        <ListView x:Name="PetsListView"
                  ItemTapped="PetsListView_ItemTapped"
                  HasUnevenRows="True"
                  SeparatorVisibility="None"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Border Margin="5,5,5,10"
                                Stroke="RosyBrown"
                                StrokeThickness="1"
                                Background="WhiteSmoke"
                                StrokeShape="RoundRectangle 25"
                                Padding="5"
                                WidthRequest="290">
                            <Grid ColumnDefinitions="Auto, *" 
                                  RowDefinitions="Auto, Auto, Auto">

                                <!-- Pet Image -->
                                <Border Grid.Column="0"
                                        Grid.RowSpan="3"
                                        HeightRequest="100"
                                        WidthRequest="100"
                                        Background="Transparent"
                                        StrokeThickness="0"
                                        StrokeShape="RoundRectangle 50"
                                        Margin="0,0,15,0"
                                        Padding="0">
                                    <Image Source="{Binding ImagePath}"
                                           Aspect="AspectFill"
                                           HeightRequest="100"
                                           WidthRequest="100"/>
                                </Border>

                                <!-- Pet Name -->
                                <StackLayout Grid.Column="1" 
                                             Grid.Row="0"
                                             Orientation="Horizontal"
                                             Spacing="5">
                                    <Label Text="{Binding pet_name}"
                                           FontSize="Medium"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"
                                           TextColor="#6F4C3E"/>
                                    <Label Text="{Binding pet_gender}"
                                           TextColor="#D2691E"
                                           FontSize="Small"
                                           VerticalOptions="Center"/>
                                </StackLayout>

                                <!-- Pet Age -->
                                <StackLayout Grid.Column="1" 
                                             Grid.Row="1"
                                             Orientation="Horizontal">
                                    <Label Text="Age: "
                                           FontAttributes="Bold"
                                           FontSize="Small"
                                           TextColor="#6F4C3E"/>
                                    <Label Text="{Binding pet_age}"
                                           FontSize="Small"
                                           TextColor="#6F4C3E"/>
                                    <Label Text="years"
                                           FontSize="Small"
                                           TextColor="#6F4C3E"/>
                                </StackLayout>

                                <!-- Pet Breed -->
                                <StackLayout Grid.Column="1" 
                                             Grid.Row="2"
                                             Orientation="Horizontal">
                                    <Label Text="Breed: "
                                           FontAttributes="Bold"
                                           FontSize="Small"
                                           TextColor="#6F4C3E"/>
                                    <Label Text="{Binding pet_breed}"
                                           FontSize="Small"
                                           TextColor="#6F4C3E"/>
                                </StackLayout>
                            </Grid>
                        </Border>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
