<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pawfect_Care.MainPage"
             Title=""
             BackgroundImageSource="gb.png">

    <Grid>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <Label 
                Text="Pawfect Care"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="36"
                HorizontalOptions="Center"
                TextColor="White"
                FontAttributes="Bold"/>

            <Label 
                Text="Your pet care companion"
                FontSize="18"
                HorizontalOptions="Center"
                TextColor="White"/>

            <Button 
                x:Name="AddPetButton"
                Text="+ Add New Pet"
                SemanticProperties.Hint="Adds a new pet to your care list"
                Clicked="AddPetButton_Clicked"
                HorizontalOptions="Center"
                WidthRequest="200"
                Margin="0,30,0,0"
                Padding="0,15"
                CornerRadius="100"
                BackgroundColor="#8B572A"
                TextColor="White"
                FontAttributes="Bold"/>
        </VerticalStackLayout>
    </Grid>

</ContentPage>